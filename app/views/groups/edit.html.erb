<h2>Editing group</h2>
<% form_for([:club, @group], :url => {:action=> 'update'}) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :misc %><br />
    <%= f.text_area :misc %>
  </p>
  <p>
    <%= f.label :parent_id, "Subgroup of..." %><br />
    <%= f.collection_select :parent_id, @grouplist, :id, :name, { :prompt => 'Select a Group', :include_blank => 'None'} %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', :action => 'admin', :club_id => @club, :id => @group %> |
<%= link_to 'Back', :action => 'admin' %>